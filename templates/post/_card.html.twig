
{% cache [post, 'card'] %}
    <table class = "table table-hover">
        <thead>
        <tr>
            <th scope = "col">Title</th>
            <th scope = "col">Description</th>
            <th scope = "col">Content</th>
            <th scope = "col">Created At</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.createdAt | date('Y-M-d') }}</td>
            </tr>
        </tbody>
    </table>
{% endcache %}